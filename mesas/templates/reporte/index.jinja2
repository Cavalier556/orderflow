{%extends 'base.html'%}
{% block content %}

<div class="mx-2 md:mx-12">
    <div class="">
        <div class="mt-8 rounded-lg border border-gray-200 bg-white shadow-sm p-6">
            <h3 class="text-xl">
                Reporte Diario
            </h3>
            <div class="flex flex-row justify-center gap-4">
                {% for subtotal in subtotales %}
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 w-64">
                    <p class="text-sm font-medium text-gray-600">
                        {{ subtotal.tipo__nombre }}
                    </p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">
                        {{ subtotal.total }}
                    </p>
                </div>
                {% endfor %}
            </div>
            <div class="pt-8">
                <span class="text-lg">Se atendieron {{metrics.total_mesas}} mesas y se recibieron
                    {{metrics.total_pagos}} pagos.</span>
            </div>
            <div class="pt-4">
                <span class="text-lg font-bold">Las ventas de hoy suman: {{gran_total}}</span>
            </div>
        </div>
    </div>
</div>
</div>

{% endblock %}